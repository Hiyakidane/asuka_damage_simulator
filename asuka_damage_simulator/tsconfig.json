{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "docs",
        "jsx": "react",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "./src/@types/*.d.ts",
            ]
        },
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*",
        "./tests/*.test.ts",
        "./tests/*.test.tsx",
    ],
}